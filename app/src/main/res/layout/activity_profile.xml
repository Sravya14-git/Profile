<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1D1D"
    tools:context=".ProfileActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="16dp">

       <androidx.appcompat.widget.Toolbar
           android:id="@+id/toolbar"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="5dp">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <ImageView
                   android:id="@+id/close"
                   android:layout_width="27dp"
                   android:layout_height="27dp"
                   android:layout_marginStart="15dp"
                   android:layout_alignParentStart="true"
                   android:src="@drawable/baseline_keyboard_backspace_24" />

               <TextView
                   android:id="@+id/toolbar_title"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="60dp"
                   android:text="Profile"
                   android:textColor="@color/white"
                   android:textSize="16sp"
                   android:textStyle="bold" />

              <LinearLayout
                  android:layout_width="105dp"
                  android:layout_height="40dp"
                  android:gravity="center"
                  android:id="@+id/linear"
                  android:background="@drawable/rectanglebtn"
                  android:layout_alignParentEnd="true">

               <ImageView
                   android:id="@+id/action_button"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/baseline_chat_bubble_outline_24"
                   android:scaleType="center" />

               <TextView
                   android:id="@+id/support"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Support"
                   android:textColor="@color/white"
                   android:textSize="12sp"
                   android:textStyle="bold" />

              </LinearLayout>

           </RelativeLayout>

       </androidx.appcompat.widget.Toolbar>


       <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="10dp"
          android:gravity="center_vertical">

         <ImageView
             android:id="@+id/profile_image"
             android:layout_width="64dp"
             android:layout_height="64dp"
             android:scaleType="centerCrop"
             android:src="@drawable/baseline_account_circle_24"
             android:background="@drawable/profilebtn"/>

         <LinearLayout
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="10dp"
             android:layout_marginStart="10dp"
             android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="andaz Kumar"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@android:color/white"
                android:textSize="19sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="member since Dec, 2020"
                android:textColor="#AAAAAA"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
         </LinearLayout>

         <ImageButton
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:src="@drawable/baseline_edit_24"
             android:background="@drawable/circle"
             app:tint="@android:color/white" />

      </LinearLayout>

      <LinearLayout
          android:layout_marginTop="16dp"
          android:layout_width="match_parent"
          android:layout_height="90dp"
          android:padding="16dp"
          android:background="@drawable/rectanglebtn"
          android:orientation="horizontal"
          android:gravity="center_vertical">

         <ImageView
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:src="@drawable/baseline_bike_scooter_24"
             android:background="@drawable/circle"
             android:padding="8dp"
             app:tint="@android:color/white" />

         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:layout_marginStart="12dp"
             android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="get to know your vehicles, inside out"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="CRED garage"
                   android:textColor="@android:color/white"
                   android:textSize="14sp" />

               <ImageView
                   android:layout_width="28dp"
                   android:layout_height="28dp"
                   android:id="@+id/credview"
                   android:layout_marginStart="16dp"
                   android:src="@drawable/baseline_arrow_right_alt_24"
                   app:tint="@android:color/white" />

            </LinearLayout>

         </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_marginTop="16dp"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

         <include
             layout="@layout/item_metric_row"
             android:id="@+id/metric" />

      </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#151515"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:layout_marginTop="15dp"
        android:paddingBottom="5dp">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="24dp"
          android:text="YOUR REWARDS &amp; BENEFITS"
          android:textColor="#AAAAAA"
          android:layout_marginStart="15dp"
          android:layout_marginEnd="15dp"
          android:textSize="14sp" />

      <LinearLayout
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:padding="10dp"
          android:orientation="horizontal"
          android:gravity="center_vertical">

         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:layout_marginStart="12dp"
             android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cashback balance"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="â‚¹0"
                   android:textColor="#AAAAAA"
                   android:textStyle="bold"
                   android:textSize="13sp" />
            </LinearLayout>

         </LinearLayout>

         <ImageView
             android:layout_width="18dp"
             android:layout_height="18dp"
             android:id="@+id/cashview"
             android:layout_marginEnd="4dp"
             android:src="@drawable/rounded_arrow_forward_ios_24"
             app:tint="#AAAAAA" />

      </LinearLayout>

      <View
          android:layout_width="wrap_content"
          android:layout_height="1dp"
          android:background="#373537"/>

      <LinearLayout
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:padding="10dp"
          android:orientation="horizontal"
          android:gravity="center_vertical">

         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:layout_marginStart="12dp"
             android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="coins"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="26,46,583"
                   android:textColor="#AAAAAA"
                   android:textStyle="bold"
                   android:textSize="13sp" />
            </LinearLayout>

         </LinearLayout>

         <ImageView
             android:layout_width="18dp"
             android:layout_height="18dp"
             android:layout_marginEnd="4dp"
             android:id="@+id/coinsview"
             android:src="@drawable/rounded_arrow_forward_ios_24"
             app:tint="#AAAAAA" />

      </LinearLayout>

      <View
          android:layout_width="wrap_content"
          android:layout_height="1dp"
          android:background="#373537"/>

      <LinearLayout
          android:layout_marginTop="5dp"
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:padding="10dp"
          android:orientation="horizontal"
          android:gravity="center_vertical">

         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:layout_marginStart="12dp"
             android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="win upto Rs 1000"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="refer and earn"
                   android:textColor="#AAAAAA"
                   android:textSize="13sp" />

            </LinearLayout>

         </LinearLayout>

         <ImageView
             android:layout_width="18dp"
             android:layout_height="18dp"
             android:layout_marginEnd="4dp"
             android:id="@+id/winview"
             android:src="@drawable/rounded_arrow_forward_ios_24"
             app:tint="#AAAAAA" />

      </LinearLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="24dp"
          android:text="TRANSACTIONS &amp; SUPPORT"
          android:textColor="#AAAAAA"
          android:layout_marginStart="15dp"
          android:layout_marginEnd="15dp"
          android:textSize="14sp" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="10dp"
          android:gravity="center_vertical">

         <TextView
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:layout_marginStart="12dp"
             android:text=" all transactions "
             android:textColor="@android:color/white"
             android:textSize="14sp" />

         <ImageView
             android:layout_width="18dp"
             android:layout_height="18dp"
             android:layout_marginEnd="15dp"
             android:id="@+id/transactionview"
             android:src="@drawable/rounded_arrow_forward_ios_24"
             app:tint="#AAAAAA" />
      </LinearLayout>

    </LinearLayout>

   </LinearLayout>

</ScrollView>