<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#1E1D1D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/creditview"
            android:src="@drawable/baseline_linear_scale_24"
            android:background="@drawable/circle"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="credit score"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="757"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginEnd="20dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:src="@drawable/baseline_arrow_right_alt_24"
            app:tint="#AAAAAA"
            android:id="@+id/lifetimeview"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#373537"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_currency_rupee_24"
            android:background="@drawable/circle"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="lifetime cashback"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹3"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginEnd="20dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:src="@drawable/baseline_arrow_right_alt_24"
            app:tint="#AAAAAA"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#373537"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_upi"
            android:background="@drawable/circle"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="bank balance"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="check"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginEnd="20dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:src="@drawable/baseline_arrow_right_alt_24"
            app:tint="#AAAAAA"
            android:id="@+id/checkview"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

</LinearLayout>
